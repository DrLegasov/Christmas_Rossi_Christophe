{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Articles</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ean</th>
                <th>Name</th>
                <th>Teaser</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Picturemain</th>
                <th>Picturefront</th>
                <th>Pictureback</th>
                <th>Manuel</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.ean }}</td>
                <td>{{ article.name }}</td>
                <td>{{ article.teaser }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.price }}</td>
                <td>{{ article.stock }}</td>
                <td>{{ article.picturemain }}</td>
                <td>{{ article.picturefront }}</td>
                <td>{{ article.pictureback }}</td>
                <td>{{ article.manuel }}</td>
                <td>
                    <a class="btn btn-outline-info mx-2 my-2" href="{{ path('article_show', {'id': article.id}) }}">DÉTAIL</a>
                    <a class="btn btn-outline-info mx-2 my-2" href="{{ path('article_edit', {'id': article.id}) }}">ÉDITER</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">aucune donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">AJOUTER</a>
{% endblock %}
