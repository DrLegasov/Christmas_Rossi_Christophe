{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <h1 class="text-center">Liste de Tag</h1>
        <a class="btn btn-success col-1 mx-2 my-2" href="{{ path('tag_new') }}">Create new</a>

        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.name }}</td>
                    <td>
                        <a class="btn btn-outline-info mx-2 my-2"href="{{ path('tag_show', {'id': tag.id}) }}">DÉTAIL</a>
                        <a class="btn btn-outline-info mx-2 my-2"href="{{ path('tag_edit', {'id': tag.id}) }}">ÉDITER</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">aucunes donnée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a class="btn btn-success col-1 mx-2 my-2" href="{{ path('tag_new') }}">AJOUTER</a>
    </div>  
</div>

{% endblock %}
